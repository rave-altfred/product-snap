# Production Environment Configuration
# Copy this to .env.production and fill in the values
# DO NOT commit .env.production to git!

# Docker Configuration
REGISTRY=registry.digitalocean.com
REGISTRY_NAMESPACE=altfred-registry
PROJECT_NAME=product-snap
TAG=latest

# App URLs
FRONTEND_URL=https://lightclick.studio
BACKEND_URL=https://lightclick.studio/api
APP_NAME=ProductSnap

# Database (DigitalOcean Managed Database)
DATABASE_URL=postgresql://user:password@host:25060/database?sslmode=require

# Security - GENERATE SECURE RANDOM VALUES!
JWT_SECRET=
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
