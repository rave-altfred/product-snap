# App Configuration
APP_NAME=ProductSnap
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/productsnap

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth/google/callback

# PayPal Configuration
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-sandbox-client-id
PAYPAL_CLIENT_SECRET=your-paypal-sandbox-client-secret
PAYPAL_WEBHOOK_ID=your-webhook-id

# PayPal Plan IDs (generated from scripts/setup_paypal_plans.py)
PAYPAL_PLAN_ID_BASIC_MONTHLY=P-XXXXXXXXXXXXXXXXXX
PAYPAL_PLAN_ID_BASIC_YEARLY=P-XXXXXXXXXXXXXXXXXX
PAYPAL_PLAN_ID_PRO_MONTHLY=P-XXXXXXXXXXXXXXXXXX
PAYPAL_PLAN_ID_PRO_YEARLY=P-XXXXXXXXXXXXXXXXXX

# Nano Banana (AI Service)
NANO_BANANA_API_KEY=your-nano-banana-api-key
NANO_BANANA_API_URL=https://api.nanobanana.com

# S3/Digital Ocean Spaces
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-spaces-access-key
S3_SECRET_KEY=your-spaces-secret-key

# SMTP Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@productsnap.com
SMTP_TLS=True

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Rate Limits (Jobs per plan)
FREE_JOBS_PER_DAY=5
FREE_CONCURRENT_JOBS=1
PERSONAL_JOBS_PER_MONTH=100
PERSONAL_CONCURRENT_JOBS=3
PRO_JOBS_PER_MONTH=1000
PRO_CONCURRENT_JOBS=5

# File Upload Limits
MAX_UPLOAD_SIZE=10485760
MIN_IMAGE_WIDTH=512
MIN_IMAGE_HEIGHT=512
