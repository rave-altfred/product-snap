# Database
POSTGRES_USER=productsnap
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=productsnap

# Redis
# (uses defaults)

# Backend Auth
JWT_SECRET=change-this-to-a-secure-random-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # or 'live' for production

# PayPal Plan IDs (create these in PayPal dashboard)
PAYPAL_PLAN_ID_PERSONAL=P-xxx
PAYPAL_PLAN_ID_PRO=P-yyy

# Nano Banana API
NANO_BANANA_API_KEY=your-nano-banana-api-key
NANO_BANANA_API_URL=https://api.nanobanana.com

# DigitalOcean Spaces (S3-compatible)
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
S3_REGION=us-east-1
S3_BUCKET=productsnap-storage
S3_ACCESS_KEY=your-spaces-access-key
S3_SECRET_KEY=your-spaces-secret-key

# Email (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@yourdomain.com

# URLs
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com
VITE_API_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com

# Logging
LOG_LEVEL=INFO

# Domain (for SSL)
DOMAIN=yourdomain.com
EMAIL=admin@yourdomain.com
